<%- include('../partials/head.ejs') %>
<%- include('../partials/nav.ejs') %>

<main role="main">
    <h1 class="display-3"> Read our blog</h1>
    <div class="album py-5 bg-light">
        <div class="container">
            <div class="row">
                <!--                        One card -->
                <% result.forEach((blog) => { %>
                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm">
                            <div class="card-body">
                                <%- `<h5 class="card-title"> ${blog.title} </h5>` %>
                                <%- `<h6 class="text-muted"> ${blog.author} </h6>` %>
                                <%- `<p class="card-text"
                                >${blog.body}</p
                                >` %>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a href="/blog/single/<%= blog.id %>"
                                           class="btn btn-sm btn-outline-secondary">View</a>
                                        <a href="/blog/single/edit/<%= blog.id %>"
                                           type="button"
                                           class="btn btn-sm btn-outline-secondary">Edit</a>
                                    </div>
                                    <%- `<small class="text-muted"> ${blog.createdAt.toLocaleString()}</small>` %>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
                <!--                    One card end-->
            </div>
        </div>
    </div>
</main>

<%- include('../partials/footer.ejs') %>
