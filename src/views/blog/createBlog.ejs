<h1> Add new Blog post </h1>


<form id="create-post-form" action="/api/blog" method="POST">
    <div class="form-group">
        <label for="title">Your Title</label>
        <input
                required
                type="text"
                class="form-control"
                id="title"
                name="title"
                placeholder="Enter title"
        />
    </div>
    <div class="form-group">
        <label for="author">Author</label>
        <input
                required
                type="text"
                class="form-control"
                id="author"
                name="author"
                placeholder="Enter author"
        />
    </div>
    <div class="form-group">
        <label for="text">Enter Post Text</label>
        <textarea
                type="text"
                class="form-control"
                id="text"
                name="body"
                placeholder="Enter text"
                required
        ></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Add post</button>
</form>


